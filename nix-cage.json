{
    "mounts": {
        "rw": [
            ".",
            "/tmp"
        ],
        "ro": [
            "~/.emacs.d",
            "~/.spacemacs",
            "~/.gitconfig",
            "~/.Xauthority"
        ],
        "tmpfs": ["~", "~/.emacs.d/.cache"]
    },
    "environment": {
        "PATH":     "$HOME/.local/bin:/usr/bin:/bin:$PATH",
        "NIX_PATH": "$NIX_PATH",
        "TERM":     "screen-256color",
        "DISPLAY":  "$DISPLAY"
    },
    "arguments": {
        "bwrap": [
            "--die-with-parent",
            "--unshare-cgroup",
            "--unshare-ipc"
        ]
    }
}
